                <%= f.text_field :title, class: 'form-control' %>
              </div>
            </div>
            <br>
            <br>
            <div class="form-group">
              <%= f.label :description, class: 'control-label col-md-2' %>
              <div class="col-sm-10">
                <%= f.text_area :description, size: '100x7', class: 'form-control' %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit "Submit", class: 'btn btn-info' %>
            </div>
          </div>
        </div>
        <br>
    <% end %>
  </div>
</div>